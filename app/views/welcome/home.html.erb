<% if session[:user_id] %>
    <h1><%= @user.name %></h1>
    <h2>Email: <%= @user.email %></h2>
    <h2>Facebook UID: <%= @user.uid %></h2>
    <img src="<%= @user.image %>">
<% else %>
    <%= link_to('Login with Facebook', 'auth/facebook') %>
<% end %>

<p> Hard coded link to pass tests:
<a href="/auth/facebook">Login with Facebook</a></p>